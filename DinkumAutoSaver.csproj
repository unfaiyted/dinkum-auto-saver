<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>DinkumAutoSaver</AssemblyName>
    <Description>Automatically save at an interval, to prevent data loss</Description>
    <Version>0.0.1</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Analyzers" Version="1.0.8" PrivateAssets="all" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.1.0" />
    <PackageReference Include="BepInEx.Unity" Version="6.0.0-pre.1" />
    <PackageReference Include="Dinkum.GameLibs" Version="2022.12.18-r.0" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.3" />
    <PackageReference Include="UnityEngine.Modules" Version="2023.1.0-beta.1" IncludeAssets="compile" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="obj\Debug" />
  </ItemGroup>
</Project>
